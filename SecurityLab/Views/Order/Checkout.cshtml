@{
    var customers = ViewBag.Customers as List<Customer>;
}
@model Order

<h2>Check out now</h2>
<p>Please enter your details, and we'll ship your goods right away!</p>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Checkout" method="post">
    <h3>Ship to</h3>
    <input type="hidden" asp-for="Customer.UserId" class="form-control"/>
    <input type="hidden" asp-for="DayOfWeek" class="form-control"/>
    <div class="form-group">
        <label>First Name:</label>
        <input asp-for="Customer.FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Last Name:</label>
        <input asp-for="Customer.LastName" class="form-control" />
    </div>
    <h3>Shipping Address</h3>
    <div class="form-group">
        <label>Street:</label>
        <input class="form-control" />
    </div>
    <div class="form-group">
        <label>City:</label>
        <input class="form-control" />
    </div>
    <div class="form-group">
        <label>State:</label>
        <input class="form-control" />
    </div>
    <div class="form-group">
        <label>Zip:</label>
        <input class="form-control" />
    </div>
    <div class="form-group">
        <label>Country:</label>
        <input asp-for="ShippingAddress" class="form-control" />
    </div>
    <h3>Billing Information</h3>
    <div class="form-group">
        <label>Country of Transaction:</label>
        <input asp-for="CountryOfTransaction" class="form-control" />
    </div>
    <div class="form-group">
        <label>Transaction Type:</label>
        <select asp-for="TypeOfTransaction" class="form-control">
            <option value="POS">POS</option>
            <option value="ATM">ATM</option>
            <option value="Online">Online</option>
        </select>
    </div>
    <div class="form-group">
        <label>Entry Mode:</label>
        <select asp-for="EntryMode" class="form-control">
            <option value="Tap">Tap</option>
            <option value="PIN">PIN</option>
            <option value="CVC">CVC</option>
        </select>
    </div>
    <div class="form-group">
        <label>Card Type:</label>
        <select asp-for="TypeOfCard" class="form-control">
            <option value="MasterCard">MasterCard</option>
            <option value="Visa">Visa</option>
        </select>
    </div>
    <div class="form-group">
        <label>Bank:</label>
        <select asp-for="Bank" class="form-control">
            <option value="Barclays">Barclays</option>
            <option value="Halifax">Halifax</option>
            <option value="HSBC">HSBC</option>
            <option value="Lloyds">Lloyds</option>
            <option value="Metro">Metro</option>
            <option value="Monzo">Monzo</option>
            <option value="RBS">RBS</option>
        </select>
    </div>
    <br />
    <div class="text-center">
        <input class="btn btn-primary" type="submit"
               value="Complete Order" />
    </div>
</form>