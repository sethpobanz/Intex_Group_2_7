@{
    ViewData["Title"] = "Home Page";
}
@model List<Product>
<br />
<br />
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-9 text-center">
            <img src="~/lib/photos/man_with_legos.png" class="img-fluid" alt="Man with Legos" />
        </div>
    </div>

    <div class="row mt-5">
        <div class="col">
            <h2 class="text-center">Top Recommendations</h2>
        </div>
    </div>

    <div class="container">
        <div class="row row-cols-1 row-cols-md-3">
            @foreach (var product in Model)
            {
                <div class="col mb-4">
                    <div class="card text-center">
                        <div class="d-flex justify-content-center">
                            <!-- Centering the image horizontally -->
                            <img class="card-img-top" style="height: 200px; width: auto;" src="@product.ImgLink" alt="Card image">
                        </div>
                        <div class="card-body">
                            <h4 class="card-title">@product.Name</h4>
                            <form asp-controller="Home" asp-action="LegoSingle" method="get">
                                <input type="hidden" name="productId" value="@product.ProductId" />
                                <button type="submit" class="btn btn-success btn-sm">View Details</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>



   
</div>
