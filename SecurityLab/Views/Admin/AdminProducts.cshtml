@model List<Product>
<br />
<br />
<a class="btn btn-outline-secondary" asp-controller="Admin" asp-action="addProduct">Add New Product</a>
<br />
<br />
<table class="table table-striped table-bordered">
    <thead class="fw-bold">
        <tr>
            <th>Name</th>
            <th>Year</th>
            <th>NumParts</th>
            <th>Price</th>
            <th>Image Link</th>
            <th>Primary Color</th>
            <th>Secondary Color</th>
            <th>Description</th>
            <th>Category1</th>
            <th>Category2</th>
            <th>Category3</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Name</td>
                <td>@x.Year</td>
                <td>@x.NumParts</td>
                <td>@x.Price</td>
                <td>
                    <img src="@x.ImgLink" style="max-width: 80px; height: auto;" />
                </td>
                <td>@x.PrimaryColor</td>
                <td>@x.SecondaryColor</td>
                <td>
                    <!-- Button to trigger description modal -->
                    <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#descriptionModal_@x.ProductId">View Description</button>

                    <!-- Description Modal -->
                    <div class="modal fade" id="descriptionModal_@x.ProductId" tabindex="-1" aria-labelledby="descriptionModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="descriptionModalLabel">@x.Name Description</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p>@x.Description</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
                <td>@x.Category1</td>
                <td>@x.Category2</td>
                <td>@x.Category3</td>
                <td>
                    <!-- Edit and Delete buttons -->
                    <a class="btn btn-info" asp-controller="Admin" asp-action="EditProduct" asp-route-id="@x.ProductId">Edit</a>
                    <br />
                    <br />
                    <a class="btn btn-danger" asp-controller="Admin" asp-action="DeleteProduct" asp-route-id="@x.ProductId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<a class="btn btn-outline-secondary" asp-controller="Admin" asp-action="addProduct">Add New Product</a>
<br />
<br />